class Solution {
    public boolean canMakeArithmeticProgression(int[] arr) {
        
        int diff;
        Arrays.sort(arr);
        diff = arr[0]-arr[1];
        for(int i = 0 ; i <arr.length-1; i++){
            if(arr[i] - arr[i+1] != diff){
                return false;
            }
            
        }
        return true;
    }
    
}
